@model Movie
@{
    ViewData["title"] = Model.Title;
}
<div class="row justify-content-between mt-60-px">
    <div class="col-md-3">
        <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail" alt="@Model.Title" />
    </div>
    <div class="col-md-7">
        <div class="d-flex justify-content-between mb-3">
            <h3>@Model.Title</h3>
            <span class="mt-2">
                <i class="bi bi-star-fill text-warning"></i>
                <span >@Model.Rate.ToString("0.0")</span>
            </span>
        </div>
        <span class="text-muted mr-3">
            <i class="bi bi-calendar"></i>
            @Model.Year
        </span>
        <span >
            <i class="bi bi-film"></i>
            @ViewBag.Genre
        </span>
        <p class="text-justify mt-3">@Model.Storeline</p>
        <div >
            <a class="btn btn-outline-primary" asp-action="Index"> <i class="bi bi-arrow-return-left" ></i>  Back</a>
        </div>
    </div>
    
</div>