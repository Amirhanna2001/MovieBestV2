@model RoleViewModel
<form method="post" asp-action="CreateRole">
    <div class="input-group mb-3 p-1">
        <input class="form-control" asp-for="RoleName" placeholder="Role Name..."/>
        <div class="form-group-append ">
            <button type="submit" class="btn btn btn-secondary ml-1"><i class="bi bi-plus-circle pl-1"></i> Add New Role</button>
        </div>
    </div>
    
    <span asp-validation-for="RoleName" class="text-danger"></span>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
