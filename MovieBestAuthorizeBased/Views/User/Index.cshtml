@model IEnumerable<UserViewModel>
@{
    ViewData["Title"]= "Users";
}
<h1> <i class="bi bi-people-fill text-muted"></i> Users</h1>
<hr />
<a class="btn btn-secondary mb-2" asp-action="AddNewUser" > <i class="bi bi-plus-circle"></i> Add New User</a>
<table class="table table-striped" >
    <thead class="table-dark">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Name</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>

    </thead>
    <tbody>
        @foreach(UserViewModel user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@string.Join(" , ",user.UserRoles.ToList())</td>
                <td>
                    <a asp-action="ManageUser" class="btn btn-outline-secondary text-black-50" asp-route-id="@user.Id">
                      <i class="bi bi-gear-fill"></i> Manage This User</a>    
                               
                </td>
            </tr>
        }
    </tbody>
</table>